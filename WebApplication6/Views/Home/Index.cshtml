@model IEnumerable<WebApplication6.Models.emolyee>
<br />
@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    @Html.TextBox("searching")
    <input type="submit" value="search" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">

            <a href="@Url.Action("Create","empolyee")">Create</a>
        </div>
    </div>
}
<table class="table table-striped ">
    <thead>
        <tr>
            <th>employee ID</th>
            <th>employeeName</th>
            <th>departement ID</th>
        </tr>

    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:darkred">
                    SORRY! No Match Any Document
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.empolyeeId</td>
                    <td>@item.empolyeeName</td>
                    <td>@item.dep_Id</td>
                </tr>




            }
        }
    </tbody>

</table>

